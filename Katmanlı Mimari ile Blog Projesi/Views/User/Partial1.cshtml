@model IEnumerable<EntityLayer.Concrete.Author>

<div class="tab-pane" id="settings">
    @using (Html.BeginForm("UpdateUserProfile", "User",FormMethod.Post))
    {
        foreach(var item in Model) {
    <form class="form-horizontal">
        <div class="form-group row">
            <div class="col-sm-10">
                <input type="hidden" readonly class="form-control" name="AuthorID" value="@item.AuthorID">
            </div>
        </div>

        <div class="form-group row">
            <label for="inputName" class="col-sm-2 col-form-label">Ad Soyad</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="AuthorName" value="@item.AuthorName">
            </div>
        </div>

        <div class="form-group row">
            <label for="inputEmail" class="col-sm-2 col-form-label">E-Posta</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" name="AuthorMail" value="@item.AuthorMail">
            </div>
        </div>

        <div class="form-group row">
            <label for="inputSkills" class="col-sm-2 col-form-label">Telefon</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="AuthorPhoneNumber" value="@item.AuthorPhoneNumber">
            </div>
        </div>

        <div class="form-group row">
            <label for="inputName2" class="col-sm-2 col-form-label">Ünvan</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="AuthorTitle" value="@item.AuthorTitle">
            </div>
        </div>

        <div class="form-group row">
            <label for="inputSkills" class="col-sm-2 col-form-label">Fotoğraf</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="AuthorImage" value="@item.AuthorImage">
            </div>
        </div>

        <div class="form-group row">
            <label for="inputSkills" class="col-sm-2 col-form-label">Şifre</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="AuthorPassword" value="@item.AuthorPassword">
            </div>
        </div>

        <div class="form-group row">
            <label for="inputSkills" class="col-sm-2 col-form-label">Şifre Tekrar</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="AuthorPassword">
            </div>
        </div>

        <div class="form-group row">
            <label for="inputSkills" class="col-sm-2 col-form-label">Meslek</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="AuthorAboutShort" value="@item.AuthorAboutShort">
            </div>
        </div>

        <div class="form-group row">
            <label for="inputSkills" class="col-sm-2 col-form-label">Hakkında</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="AuthorAbout" value="@item.AuthorAbout">
            </div>
        </div>

        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <button type="submit" class="btn btn-outline-success btn-sm"><i class="fas fa-check"></i> Güncelle</button>
            </div>
        </div>
    </form>
        }
    }
</div>
