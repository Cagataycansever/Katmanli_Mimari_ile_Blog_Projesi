@model IEnumerable<EntityLayer.Concrete.About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="site-cover site-cover-sm same-height overlay single-page" style="background-image: url('/miniblog/images/img_4.jpg');">
    <div class="container">
        <div class="row same-height justify-content-center">
            <div class="col-md-12 col-lg-10">
                <div class="post-entry text-center">
                    <h1 class="">Hakkımızda</h1>
                    <p class="lead mb-4 text-white">Sizler için yazı yazan bizleri daha yakından tanımak ister misiniz ?</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="site-section bg-light">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 order-md-2">
                    <img src="/miniblog/images/img_1.jpg" alt="Image" class="img-fluid">
                </div>
                <div class="col-md-5 mr-auto order-md-1">
                    <h2>Biz Kimiz ?</h2>


                    <p>@item.AboutContent1</p>
                    <ul class="ul-check list-unstyled success">
                        <li>Günlük 10 yeni yazı</li>
                        <li>15 + Kategori</li>
                        <li>21 Farklı dinamik yazar</li>
                        <li>Günlük 45.000 tekil okunma</li>
                        <li>27 Farklı ülkeden okuyucu</li>
                        <li>.... ve sosyal medyada 55B abone</li>
                    </ul>
                </div>
            }
            </div>
    </div>
</div>

@Html.Action("MeetTheTeam", "About")

<div class="site-section bg-light">
    <div class="container">
        <div class="row">
            @foreach (var x in Model)
            {
                <div class="col-md-6">
                    <img src="/miniblog/images/img_3.jpg" alt="Image" class="img-fluid">
                </div>
                <div class="col-md-5 ml-auto">
                    <h2>Neler yapıyoruz ?</h2>

                    <p class="mb-4">@x.AboutContent2</p>
                    
                    <ul class="ul-check list-unstyled success">
                        <li>Onsectetur adipisicing elit</li>
                        <li>Dolorem saepe non eligendi possimus</li>
                        <li>Voluptate odit corrupti vitae</li>
                    </ul>
                </div>
            }
            </div>
    </div>
</div>

