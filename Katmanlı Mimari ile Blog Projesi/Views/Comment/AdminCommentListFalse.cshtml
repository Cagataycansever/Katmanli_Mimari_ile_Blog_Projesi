@model IEnumerable<EntityLayer.Concrete.Comment>
@{
    ViewBag.Title = "AdminCommentListFalse";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<br />
<h2>Pasif Yorum Listesi</h2>
<br />
<div class="card">

    <div class="card-body">
        <div class="row">
            <div class="col-12 col-md-4 col-lg-12 order-2 order-md-1">
                <div class="row">
                    <div class="col-12 col-sm-4">
                        <div class="info-box bg-light">
                            <div class="info-box-content">
                                <h4 class="info-box-text text-center text-muted">Toplam Yorum</h4>
                                <h5 class="info-box-number text-center text-muted mb-0">@ViewBag.tyorum</h5>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-sm-4">
                        <div class="info-box bg-light">
                            <div class="info-box-content">
                                <h4 class="info-box-text text-center text-muted">En Çok Yorum Alan Blog</h4>
                                <h5 class="info-box-number text-center text-muted mb-0">@ViewBag.eblog</h5>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-sm-4">
                        <div class="info-box bg-light">
                            <div class="info-box-content">
                                <h4 class="info-box-text text-center text-muted">En Çok Yorum Alan Yazar</h4>
                                <h5 class="info-box-number text-center text-muted mb-0">@ViewBag.eyazar</h5>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-12">
                        <h4>Son Yorumlar</h4>
                        @foreach (var item in Model)
                        {
                            <div class="post clearfix">
                                <div class="user-block">
                                    <img class="img-circle img-bordered-sm" src="~/AdminLTE-3.0.4/dist/img/comment.jpg">
                                    <span class="username">  @item.UserName - @item.Blogs.BlogTitle </span>
                                    <span class="description">@item.Mail - @(((DateTime)item.CommentDate).ToString("dd MMM yyyy"))</span>
                                </div>
                                <!-- /.user-block -->
                                <p>@item.CommentText</p>
                                <br />
                                <p><a href="/Comment/StatusChangeToTrue/@item.CommentID" class="btn btn-sm btn-outline-success"> <i class="fas fa-check"> </i> Yayınla</a></p>
                            </div>
                        }
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>



