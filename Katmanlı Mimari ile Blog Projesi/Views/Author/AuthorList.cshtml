@model IEnumerable<EntityLayer.Concrete.Author>
@{
    ViewBag.Title = "AuthorList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<h2>Yazar Listesi</h2>
<br />
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <section class="content">
            <div class="card card-solid">

                <div class="card-body pb-0">

                    <div class="row d-flex align-items-stretch">
                        @foreach (var item in Model)
                        {
                            <div class="col-4 d-flex align-items-stretch">
                                <div class="card bg-light">
                                    <div class="card-header text-muted border-bottom-0">@item.AuthorTitle</div>
                                    <div class="card-body pt-0">
                                        <div class="row">
                                            <div class="col-7">
                                                <h2 class="lead"><b>@item.AuthorName</b></h2>
                                                <p class="text-muted text-sm"><u style="font-weight:bold;">Hakkında :</u> @item.AuthorAbout </p>
                                                <ul class="ml-4 mb-0 fa-ul text-muted">
                                                    <li class="small"><span class="fa-li"><i class="fas fa-lg fa-envelope"></i></span> Mail : @item.AuthorMail</li>
                                                    <li class="small"><span class="fa-li"><i class="fas fa-lg fa-phone"></i></span> Telefon : @item.AuthorPhoneNumber</li>
                                                </ul>
                                            </div>
                                            <div class="col-5 text-center">
                                                <img src="@item.AuthorImage" alt="" class="img-circle img-fluid" style="height:130px;width:130px;">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-footer">
                                        <div class="text-right">
                                            <a href="/Blog/AuthorBlogList/@item.AuthorID" class="btn btn-sm bg-teal"> <i class="fas fa-comments"></i> Yazarın Blogları</a>
                                            <a href="/Author/EditAuthor/@item.AuthorID" class="btn btn-sm btn-primary"><i class="fas fa-user"></i> Profili Düzenle</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                </div>

            </div>

        </section>
        <a href="/Author/AddAuthor" class="btn btn-outline-info btn-sm"><i class="fas fa-plus"></i> Yeni Yazar Ekle</a>
    </div>
</body>
</html>

