
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="zxx">

<head>
    <title>MVC 5 Blog | Login </title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="UTF-8" />
    <meta name="keywords"
          content="Report Login Form Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template, Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />

    <link href="//fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;500;700;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/LoginForm/css/style.css" type="text/css" media="all" />
    <link rel="stylesheet" href="~/LoginForm/css/font-awesome.min.css" type="text/css" media="all">
</head>
<body>
    <section class="w3l-hotair-form">
        <h1>MVC 5 Blog | Yazar Girisi</h1>
        <div class="container">
            <div class="workinghny-form-grid">
                <div class="main-hotair">
                    <div class="content-wthree">
                        <h2>Hosgeldiniz</h2>
                        @using (Html.BeginForm("AuthorLogin", "Login", FormMethod.Post))
                        {
                            <input type="text" class="text" name="AuthorMail" placeholder="Kullanıcı Adı" required="" autofocus>
                            <input type="password" class="password" name="AuthorPassword" placeholder="Şifre" required="" autofocus>
                            <button class="btn" type="submit">Giris Yap</button>

                        <p class="account"><a href="/Login/AdminLogin">Yönetici Girişi</a></p>
                        }
                    </div>
                    <div class="w3l_form align-self">
                        <div class="left_grid_info">
                            <img src="~/LoginForm/images/1.png" alt="" class="img-fluid">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
