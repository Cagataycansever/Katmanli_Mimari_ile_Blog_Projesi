
@{
    Layout = null;
}
<!DOCTYPE HTML>
<html>
<head>
    <title>MVC 5 Blog | Login </title>
    <link href="~/portallogin/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Plans & Pricing Tables Responsive, Login form web template, Sign up Web Templates, Flat Web Templates, Login signup Responsive web template, Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <link href='//fonts.googleapis.com/css?family=PT+Sans+Narrow:400,700' rel='stylesheet' type='text/css'>
</head>
<body>
    <div class="main">

        <div class="login">

            <div class="login-top">
                <img src="~/portallogin/images/p.png">
            </div>
            <h1>Admin Girişi</h1>
            <div class="login-bottom">

                @using (Html.BeginForm("AdminLogin", "Login", FormMethod.Post))
                {
                    <input type="text" class="text" name="AdminUserName" placeholder="Kullanıcı Adı" required="" autofocus>
                    <input type="password" class="password" name="AdminPassword" placeholder="Şifre" required="" autofocus>
                    <input type="submit" value="Giriş Yap">
                }

            </div>
        </div>
    </div>
</body>
</html>
